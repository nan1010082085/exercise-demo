{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "types": ["tdesign-vue-next/global.d.ts", "vitest/importMeta"],
    "paths": {
      "@/*": ["src/*"],
      "@composables/*": ["src/composables/*"],
      "@public/*": ["public/*"],
      "@assets/*": ["src/assets/*"],
      "@workers/*": ["src/workers/*"],
      "@widget/*": ["src/widget/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.d.ts"],
  "exclude": ["src/workers/*"]
}
