{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "src/utils/v.json", "test-demo/*", "test-demo/**/*"],
  "exclude": ["src/**/__test__/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@composables/*": ["src/composables/*"],
      "@public/*": ["src/public/*"],
      "@assets/*": ["src/assets/*"]
    }
  }
}
