{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "**/*.{spec,test}.(j|t)s"],
  "exclude": [],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "types": ["tdesign-vue-next/global.d.ts", "node", "vitest/importMeta"],
    "paths": {
      "@/*": ["src/*"],
      "@composables/*": ["src/composables/*"],
      "@public/*": ["public/*"],
      "@assets/*": ["src/assets/*"],
      "@workers/*": ["src/workers/*"],
      "@widget/*": ["src/widget/*"]
    }
  }
}
